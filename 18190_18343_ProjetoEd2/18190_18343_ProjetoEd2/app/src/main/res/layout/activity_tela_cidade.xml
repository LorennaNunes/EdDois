<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCidade">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2ADB87"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_revert"
            />
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Nova Cidade"
            android:textColor="@android:color/black"
            android:textSize="26dp"
            android:gravity="center"
            ></TextView>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingStart="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/txt"
        android:layout_width="173dp"
        android:layout_height="38dp"
        android:text="Nome da cidade:"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/txtNomeCidade"
        android:layout_width="210dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="110dp" />


    <TextView
        android:id="@+id/txtCordX"
        android:layout_width="147dp"
        android:layout_height="34dp"
        android:text="Coordenada X:"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="190dp" />

    <EditText
        android:id="@+id/coordX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="179dp"
        android:hint= "Ex: 0,111"
        />

    <TextView
        android:id="@+id/txtCordY"
        android:layout_width="149dp"
        android:layout_height="34dp"
        android:text="Coordenada Y:"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="260dp" />

    <EditText
        android:id="@+id/coordY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="249dp"
        android:hint= "Ex: 0,111"/>

        <Button
            android:id="@+id/btnAddCidade"
            android:layout_width="112dp"
            android:layout_height="56dp"
            android:background="#2ADB87"
            android:text="Adicionar"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="361dp" />
    </LinearLayout>
</LinearLayout>