<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCidade">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome da cidade:"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/txtNomeCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-62dp"
        tools:layout_editor_absoluteY="120"
        android:layout_marginLeft="132dp"/>


    <TextView
        android:id="@+id/txtCordX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordenada X:"
        tools:layout_editor_absoluteX="-62dp"
        tools:layout_editor_absoluteY="153dp" />
    <EditText
        android:id="@+id/coordX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/txtCordY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordenada Y:"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="184dp" />

    <EditText
        android:id="@+id/coordY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="189dp" />

    <Button
        android:id="@+id/btnAddCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="411dp" />

</androidx.constraintlayout.widget.ConstraintLayout>